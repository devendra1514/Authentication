<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScreenLogo" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeWidth">@dimen/strokeWidth</item>
        <item name="strokeColor">@color/strokeColor</item>
        <item name="hintTextColor">@color/strokeColor</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius</item>

    </style>
    <style name="OptionButton">
        <item name="android:gravity">fill</item>
        <item name="android:drawablePadding">@dimen/radius</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">#D7F0EA</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/strokeColor</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
        <item name="backgroundTint">#D7F0EA</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>